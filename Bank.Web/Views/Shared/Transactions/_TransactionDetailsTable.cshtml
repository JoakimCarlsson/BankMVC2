@model Bank.Core.ViewModels.Transactions.TransactionDetailsListViewModel
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Transactions</h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
            <tr>
                <th>TransactionId</th>
                <th>Date</th>
                <th>Type</th>
                <th>Operation</th>
                <th>Amount</th>
                <th>Balance</th>
                <th>Symbol</th>
                <th>Bank</th>
                <th>Account</th>
            </tr>
            </thead>
            <tbody id="transactions">
            <partial name="Transactions/_TransactionDetailsTableBody" model="@Model" />
            </tbody>
        </table>
    </div>
</div>