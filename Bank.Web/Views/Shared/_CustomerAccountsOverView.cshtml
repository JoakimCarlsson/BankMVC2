@model IEnumerable<Bank.Core.ViewModels.Accounts.AccountCustomerViewModel>

<div class="card card-secondary">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Account Details</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                    <tr>
                        <th>Account ID</th>
                        <th>Balance </th>
                        <th>Transaction Info</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var account in @Model)
                    {
                        <tr>
                            <td>@account.AccountId</td>
                            <td>@account.Balance</td>
                            <td><button class="btn btn-block btn-secondary btn-flat">More Information</button></td>
                        </tr>
                    }
                    <tr>
                        <td colspan="3">Total Balance: @Model.Select(i => i.Balance).Sum()</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>