@model Bank.Core.ViewModels.User.UserListViewModel

@{
    ViewData["Title"] = "Stuff";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">All Users</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th >ID</th>
                        <th>Email</th>
                        <th >Email Confirmed</th>
                        <th>Roles</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@user.EmailConfirmed</td>
                        <th>@foreach(var role in user.Roles){<a>@role, </a>}</th>
                        <td><a class="btn btn-block btn-secondary btn-xs" asp-controller="User" asp-action="Edit" asp-route-Id="@user.Id">Edit</a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>