@model Bank.Web.ViewModels.User.UserListViewModel

@{
    ViewData["Title"] = "Stuff";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>User List</h1>
            </div>
        </div>
    </div>
</section>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">All Users</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="dt-buttons btn-group flex-wrap">
                        <a class="btn btn-block btn-secondary btn-xs" asp-controller="User" asp-action="Register"><span>Create New User</span></a>
                    </div>
                </div>
            </div>

            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Email Confirmed</th>
                        <th>Roles</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Email</td>
                            <td>@user.EmailConfirmed</td>
                            <th>
                                @foreach (var role in user.Roles)
                                {<a>@role, </a>}
                            </th>
                            <td><a class="btn btn-block btn-secondary btn-xs" asp-controller="User" asp-action="Edit" asp-route-Id="@user.Id">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>