@model Bank.Core.ViewModels.Customers.CustomerSearchListViewModel
@{
    ViewData["Title"] = "Customer Search";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Customer Search</h1>
            </div>
        </div>
    </div>
</section>

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Search</h3>
            <div class="card-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                <tr>
                    <th>Customer Id</th>
                    <th>Name</th>
                    <th>Birth Date</th>
                    <th>Address</th>
                    <th>City</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var customer in @Model.Customers)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@($"{customer.Surname} {customer.Givenname}")</td>
                        <td>@customer.Birthday</td>
                        <td>@customer.Streetaddress</td>
                        <td>@customer.City</td>
                    </tr>
                }
                <tr>
                    <td colspan="5">
                        <span style="float: right;">
                            <span style="text-align: center;">
                                1-10 of 104
                            </span>
                            <a asp-controller="Customer" asp-action="Search" asp-route-page="@(Model.Page - 1)">
                                <i class="fas fa-chevron-left fa-2x"></i>
                            </a>
                            <a asp-controller="Customer" asp-action="Search" asp-route-page="@(Model.Page + 1)">
                            <i class="fas fa-chevron-right fa-2x"></i>
                            </a>
                        </span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

