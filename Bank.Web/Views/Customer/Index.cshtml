    @model Bank.Web.ViewModels.Customers.CustomerSearchListViewModel
    @{
        ViewData["Title"] = "Customer Search";
    }
    
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Customer Search</h1>
                </div>
            </div>
        </div>
    </section>
    
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Customer List</h3>
            </div>
            <div class="card-body">
    
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="dt-buttons btn-group flex-wrap">
                            <a class="btn btn-block btn-secondary btn-xs" asp-controller="Customer" asp-action="Register"><span>Create New User</span></a>
                        </div>
                    </div>
                    <form class="col-sm-12 col-md-6" asp-controller="Customer" , asp-action="Index" method="post">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="q" class="form-control float-right" placeholder="Search" asp-for="PagingViewModel.Q">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <table class="table table-hover table-sm">
                    <thead>
                        <tr>
                            <th>
                                Customer Id
                            </th>
                            <th scope="col">
                                <a asp-controller="Customer" asp-action="Index" asp-route-sortField="Name" asp-route-sortOrder="@(Model.PagingViewModel.SortField == "Name" ? Model.PagingViewModel.OppositeSortOrder : "" )"
                                   asp-route-q="@Model.PagingViewModel.Q">
                                     Name
                                     @if (Model.PagingViewModel.SortField == "Name")
                                     {
                                         if (Model.PagingViewModel.SortOrder == "asc")
                                         {
                                             <i class="fas fa-sort-up"></i>
                                         }
                                         else
                                         {
                                             <i class="fas fa-sort-down"></i>
                                         }
                                     }
                                 </a>
                            </th>
                            <th scope="col">
                                <a asp-controller="Customer" asp-action="Index" asp-route-sortField="NationalId" asp-route-sortOrder="@(Model.PagingViewModel.SortField == "NationalId" ? Model.PagingViewModel.OppositeSortOrder : "" )"
                                   asp-route-q="@Model.PagingViewModel.Q">
                                     National Id
                                     @if (Model.PagingViewModel.SortField == "NationalId")
                                     {
                                         if (Model.PagingViewModel.SortOrder == "asc")
                                         {
                                             <i class="fas fa-sort-up"></i>
                                         }
                                         else
                                         {
                                             <i class="fas fa-sort-down"></i>
                                         }
                                     }
                                 </a>
                            </th>
                            <th scope="col">
                                <a asp-controller="Customer" asp-action="Index" asp-route-sortField="Address" asp-route-sortOrder="@(Model.PagingViewModel.SortField == "Address" ? Model.PagingViewModel.OppositeSortOrder : "" )"
                                   asp-route-q="@Model.PagingViewModel.Q">
                                     Address
                                     @if (Model.PagingViewModel.SortField == "Address")
                                     {
                                         if (Model.PagingViewModel.SortOrder == "asc")
                                         {
                                             <i class="fas fa-sort-up"></i>
                                         }
                                         else
                                         {
                                             <i class="fas fa-sort-down"></i>
                                         }
                                     }
                                 </a>
                            </th>
                            <th scope="col">
                                <a asp-controller="Customer" asp-action="Index" asp-route-sortField="City" asp-route-sortOrder="@(Model.PagingViewModel.SortField == "City" ? Model.PagingViewModel.OppositeSortOrder : "" )"
                                   asp-route-q="@Model.PagingViewModel.Q">
                                     City
                                     @if (Model.PagingViewModel.SortField == "City")
                                     {
                                         if (Model.PagingViewModel.SortOrder == "asc")
                                         {
                                             <i class="fas fa-sort-up"></i>
                                         }
                                         else
                                         {
                                             <i class="fas fa-sort-down"></i>
                                         }
                                     }
                                 </a>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in @Model.Customers)
                        {
                            <tr>
                                <td>@customer.CustomerId</td>
                                <td>@($"{customer.Surname} {customer.Givenname}")</td>
                                <td>@customer.NationalId</td>
                                <td>@customer.Streetaddress</td>
                                <td>@customer.City</td>
                                <td><a asp-controller="Customer" asp-action="CustomerDetails" asp-route-id="@customer.CustomerId" class="btn btn-block btn-secondary btn-xs">View Details</a></td>
                            </tr>
    
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <partial name="_PagingButtons" model="@Model.PagingViewModel" />
            </div>
        </div>
    </div>